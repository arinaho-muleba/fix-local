<footer>
    <section class="upper-footer">
        <section class="logo-wrapper">
            <a href="/">
                <img src="./assets/media/text-logo.svg" class="custom-max-w-smaller" alt="fix local logo" width="152" height="29"/>
            </a>
            <p>FixLocal aims to empower South African communities to solve real-world problems.</p>
        </section>
        <ul class="lists-wrapper">
            <li>
                <a class="hover:text-slate-400 cursor-pointer" href="/">
                    Home
                </a>
            </li>
            <li>
                <a class="hover:text-slate-400 cursor-pointer" href="/About-us">
                    About us
                </a>
            </li>
            <li>
                <a class="hover:text-slate-400 cursor-pointer">
                    Partners
                </a>
            </li>
            <li>
                <a class="hover:text-slate-400 cursor-pointer">
                    Contact us
                </a>
            </li>
            <li>
                <a class="hover:text-slate-400 cursor-pointer" href="/Terms-and-Conditions">
                    Terms and Conditions
                </a>
            </li>
        </ul>
        <section class="lists-wrapper">
            <strong>Categories</strong>
            <ul class="lists">
                {% for category in filters.categories %}
                    <li key="{{ category.id }}" class="first-letter:capitalize hover:text-slate-400">
                        <a>
                            {{ category }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </section>
        <section class="lists">
            <strong>Connect with us</strong>
            <section class="social-media-wrapper">
                <a>
                    <LuFacebook class="social"/>
                </a>
                <a>
                    <LuYoutube class="social"/>
                </a>
            </section>
        </section>
    </section>
    <section class="lower-footer">
        Copyright 2024 &copy; fixlocal.org
    </section>
</footer>